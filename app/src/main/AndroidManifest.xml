<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.umn.simplymeal">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CategoryView.DetailMenu_Asian"
            android:label="Detail Menu"
            android:parentActivityName=".AsianCategory"/>
        <activity
            android:name=".WesternCategory"
            android:label="Western Dishes"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AsianCategory"
            android:label="Asian Dishes"
            android:parentActivityName=".MainActivity" />


        <activity
            android:name=".CategoryView.MenuListActivity"
            android:label="Indonesian Dishes"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".loginregister.ForgotPassActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".loginregister.RegisterActivity" />
        <activity android:name=".loginregister.LoginActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>